<?xml version="1.0" ?>
<html
    xmlns:template="xhtml.template"
    xmlns:projeto="example.template.tags"
>
    <head>
        <title>Hello World</title>
    </head>
    <body style="background-color: rgb(250,250,255); color: blue">
        <p>
            <span> Hello World </span>

        </p>
        <div id="teste" class="{# 1 + 1 #}">
            <form action="" method="post">
                <projeto:numero name="joao" type="checkbox"/>
                <input type="text" name="outro" disabled="true"/>
            </form>
        </div>
        <template:if value="{#false#}">
            Value is False
            <template:else>

                Value is True.
                <br/>
                 Now are
                {# date( "h:i:s" ) #}
            </template:else>
        </template:if>
        <div>
            1 + 2 = {# 1 + 2 #}
            <br/>
            My Name is <strong> {# $this->name #} </strong>

        </div>
        <template:foreach list="1 , 2 , 3" item="foo">
            <ul>
                <template:eachitem>
                    <li>
                        {# $this->key #}
                        {# $this->foo #}
                    </li>
                </template:eachitem>
            </ul>

        </template:foreach>
        <div>
            <template:foreach list="{# $this->getNames() #}" item="name">
                <ul>
                    <template:eachitem>
                        <li>
                            <template:last>
                                Last but not least,
                            </template:last>

                            <template:first>
                                {# ucfirst( $this->name ) #}
                            </template:first>
                            <template:notfirst>
                                {# strtolower( $this->name ) #}
                            </template:notfirst>
                            <template:notlast>
                                ,
                            </template:notlast>
                            <template:last>

                                .
                            </template:last>
                        </li>
                    </template:eachitem>
                </ul>
                <template:empty>
                    Nobody here!
                </template:empty>
            </template:foreach>
        </div>

        <template:foreach list="{# $this->getCars() #}">
            <table>
                <thead>
                    <tr>
                        <th>
                            Key
                        </th>
                        <th>
                            Name
                        </th>

                    </tr>
                </thead>
                <tbody>
                    <template:eachitem>
                        <tr>
                            <td>
                                {# $this->key + 1 #}ยบ Car
                            </td>
                            <td>

                                {# $this->item #}
                            </td>
                        </tr>
                    </template:eachitem>
                </tbody>
            </table>
            <template:empty>
                <span> No cars </span>

            </template:empty>
        </template:foreach>
    </body>
</html>